{
    "compilerOptions": {
        "outDir": "./dist/",

        // This block taken from 
        //https://github.com/tsconfig/bases/blob/main/bases/recommended.json
        "target": "es6",
        //"module": "commonjs",
        "module": "es2020",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "./src/*"
    ]
}
